<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.jaanussiim.slimtimer.android" android:versionName="0.5.1"
	android:versionCode="2">
	<application android:icon="@drawable/icon" android:label="@string/app_name">
		<activity android:label="@string/app_name"
			android:noHistory="true" android:name=".activities.SlimtimerActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:noHistory="true" android:name=".activities.LoginActivity"></activity>
		<activity android:name=".SlimtimerTasksList"></activity>
		<activity android:name=".EntriesList"></activity>
		<activity android:name=".EditEntry"
			android:theme="@android:style/Theme.Translucent.NoTitleBar"></activity>
		<!--
			activity android:name=".EditEntry"
			android:theme="@android:style/Theme.Dialog"></activity
		-->
		<activity android:name=".TasksList"></activity>
		<activity android:name=".EditTask"
			android:theme="@android:style/Theme.Translucent.NoTitleBar"></activity>
	</application>
	<uses-permission android:name="android.permission.INTERNET"></uses-permission>
	<uses-sdk android:minSdkVersion="3"></uses-sdk>
	<supports-screens android:smallScreens="true"
		android:largeScreens="true" android:normalScreens="true" android:anyDensity="true"></supports-screens>
</manifest> 